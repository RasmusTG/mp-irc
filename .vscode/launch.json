    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ng-cli",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/ng",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": true
        },
        {
            "name": "Attach to Process",
            "type": "node2",
            "request": "attach",
            "port": 9229
        }
    ]
}